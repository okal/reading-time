{
    "name": "Reading time for Chrome",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Get the estimated reading time before reading a post.",
    "permissions": [
        "contextMenus",
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["custom_style.js"],
            "all_frames": true
        }
    ],
    "background": {
        "scripts": ["script.js"]
    },
    "web_accessible_resources": [
        "custom_style.css"
    ],
    "icons": {
        "16": "clock-icon.png"
    }
}
